@page
@using Grupp3_AdminApp.Models;
@model Grupp3_Elevator.Pages.Errand.ErrandEditModel
@{
}

<section>
    <div class="container">
        <h1>
            Edit Errand
            <a asp-page="/Errand/ErrandDetails" asp-route-elevatorId="@Model.Elevator.Id" asp-route-errandId="@Model.Errand.Id" class="btn btn-primary">Return</a>
        </h1>
        <div class="row mb-5">
            <div class="col">
                <div class="container card">
                    <h4 class="mt-3">Info</h4>
                    <form method="post">
                        <input hidden asp-for="Errand.Id" />
                        <table class="table">
                            <tr>
                                <td>
                                    <label>Title</label>
                                    <input asp-for="@Model.Errand.Title" class="form-control" />
                                    <span asp-validation-for="@Model.Errand.Title" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="@Model.Errand.Status" for="exampleFormControlSelect1"></label>
                                    <select asp-for="Errand.Status" class="form-control" asp-items="Html.GetEnumSelectList<ErrandStatus>()">
                                        <option value="@Model.Errand.Status"></option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="@Model.Errand.Technician.Id">Technician</label>
                                    <select class="form-control" asp-for="@Model.Errand.Technician.Id" asp-items="@Model.SelectTechnicianEdit"></select>
                                    <select hidden class="form-control" asp-for="@Model.Errand.Technician.Name" asp-items="@Model.SelectTechnicianEdit"></select>
                                    <span asp-validation-for="@Model.Errand.Technician.Id" class="field-validation-error"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="@Model.Errand.CreatedBy">Created by</label>
                                    <input asp-for="@Model.Errand.CreatedBy" class="form-control" />
                                </td>
                                    <input hidden asp-for="@Model.Errand.Comments" class="form-control" />
                            </tr>
                        </table>
                        <div class="col-6" @*style="margin: auto; width: 50%; text-align:center"*@>
                        <h4 class="mt">Description</h4>
                        <textarea asp-for="@Model.Errand.Description" class="form-control mt" placeholder="Write description here..." cols="50" rows="5"></textarea>
                        <button asp-route-elevatorId="@Model.Elevator.Id" asp-route-errandId="@Model.Errand.Id" class="mt-3 mb-3 btn btn-primary" type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>