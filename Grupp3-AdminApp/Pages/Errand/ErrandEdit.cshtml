@page
@model Grupp3_Elevator.Pages.Errand.ErrandEditModel
@{
}

<section>
    <div class="container">
        <h1 class="mb-5">
                Edit Errand Title
                <a asp-page="/Errand/ErrandDetails" asp-route-elevatorId="" asp-route-errandId="" class="btn btn-primary">Return</a>
            </h1>
        <div class="row mb-5">
            <div class="col-4">
                <div class="container card">
                    <h4 class="mt-3">Info</h4>
                    <form method="post">
                        <table class="table">
                            <tr>
                                <td>
                                    <label>Title</label>
                                    <input class="form-control" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="exampleFormControlSelect1">Status</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>Open</option>
                                        <option>Ongoing</option>
                                        <option>Closed</option>
                                        <option>NeedMoreInfo</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="exampleFormControlSelect1">Technican</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>Philip</option>
                                        <option>Pierre</option>
                                        <option>David</option>
                                        <option>Andreas</option>
                                        <option>Love</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>Created by</label>
                                    <input class="form-control" />
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="col-8">
                <div class="container card"></div>
                <h4 class="mt-3">Description</h4>
                <textarea class="form-control mt-3" placeholder="Write description here..." cols="80" rows="10"></textarea>
                <div>
                    <button class="mt-3 mb-3 btn btn-primary" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>
</section>
