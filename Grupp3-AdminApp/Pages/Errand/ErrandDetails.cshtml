@page
@model Grupp3_Elevator.Pages.Errand.ErrandDetailsModel
@{
}
<section>
    <div class="container">
        <h1 class="mb-5">
            Errand
            <a asp-page="/Elevator/ElevatorDetails" asp-route-elevatorId="@Model.Elevator.Id" class="btn btn-primary">Return</a>
            <a asp-page="/Errand/ErrandEdit" asp-route-elevatorId="@Model.Elevator.Id" asp-route-errandId="@Model.Errand.Id" class="btn btn-success">Edit</a>
            </h1>
        <div class="row mb-5">
            <div class="col-4">
                <div class="container card">
                    <h4>Info</h4>
                    <table class="table">
                        <tr><td>Id: @Model.Errand.Id</td></tr>
                        <tr><td>Title: @Model.Errand.Title</td></tr>
                        <tr><td>Status: @Model.Errand.Status</td></tr>
                        <tr><td>Last Edited: @Model.Errand.LastEdited</td></tr>
                        <tr><td>Created at: @Model.Errand.CreatedAt</td></tr>
                        <tr><td>Created by: @Model.Errand.CreatedBy</td></tr>
                        <tr><td>Technician: @Model.Errand.Technician.Name</td></tr>
                    </table>
                </div>
            </div>
            <div class="col-8">
                <div class="container card">
                    <h4>Description</h4>
                    <p>
                        @Model.Errand.Description
                    </p>
                </div>
            </div>
@*            <div class="d-flex justify-content-start m-1">
                <a asp-page="/Errand/ErrandEdit" asp-route-errandId="@Model.Errand.Id" class="btn btn-success">Edit</a>
            </div>*@
        </div>
        <div class="col">
            <div class="container card">
                <table class="table">
                    @foreach (var comment in Model.ErrandComments)
                    {
                        <tr class="d-flex flex-column">
                            <th>(Date: @comment.PostedAt) - (Technician: @comment.Author) - (Comment ID:@comment.Id)</th>
                            <td>@comment.Content</td>
                        </tr>
                    }
                </table>
                <div class="mx-auto">
                    <form method="post">
                        <table class="table">
                            <tr>
                                <td>
                                    <label asp-for="TechnicianId">Technician</label>
                                    <select class="form-control" asp-for="TechnicianId" asp-items="@Model.SelectTechnician"></select>
                                    <span asp-validation-for="TechnicianId" class="field-validation-error"></span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Content">Text</label>
                                    <input asp-for="Content" class="form-control" />
                                    <span asp-validation-for="Content" class="field-validation-error"></span>
                                </td>
                            </tr>
                        </table>
                        <button asp-route-elevatorId="@Model.Elevator.Id" asp-route-errandId="@Model.Errand.Id" class="mt-3 mb-3 btn btn-primary" type="submit">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>